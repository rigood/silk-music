//- keyword
//- keyword, songs, count 받음

extends base
include mixins/songWithAdd

block content
    .center
        h2 🔎 검색 🔍

        form(method="POST")
            input(type="text" name="keyword" placeholder="제목 또는 아티스트 (Title or Artist)" value=keyword required)
            .desc 🎀 Silk Music DB에서 곡을 검색합니다.

        .search-page
            if songs
                .count
                    strong=`'${keyword}' ` 
                    span 검색 결과 총 #{count}건
                ul
                    each song, index in songs
                        +songWithAdd(song, index)
                    else
                        .msg="검색 결과가 없습니다."