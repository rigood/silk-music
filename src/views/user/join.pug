//- email, password, name(optional), avatarUrl
//- errorMsg (409 이미 가입된 메일, 500 서버 오류)

extends ../base
include ../mixins/radio

block content
    .center
        h2 회원가입
        form(method="POST")
            .label 이메일
            input(name="email" id="email" placeholder="이메일" type="email", required)
            .label 비밀번호
            input(name="password" id="password" placeholder="비밀번호" type="password", required, minLength="4" maxLength="15" autocomplete="new-password")
            .label 닉네임
            input(name="name" id="name" placeholder="닉네임 (선택)" type="text" minLength="1" maxLength="10")
            .radio
                each avatar in ["defaultAvatar","sarang","seoul","crown","red","yellowgreen"]
                    +radio(avatar, "defaultAvatar", "avatarUrl")
            button(type="submit") 회원가입
        if errorMsg
            .errorMsg=errorMsg
