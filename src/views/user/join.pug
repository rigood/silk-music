//- email, password, name(optional), avatarUrl
//- errorMsg (409 이미 가입된 메일, 500 서버 오류)

extends ../base
include ../mixins/radio

block content
    .center
        h2 회원가입

        if errorMsg
            .errorMsg=errorMsg

        form(method="POST")
            .label 이메일
            input(name="email" id="email" placeholder="Email" type="email", required value=email autofocus)

            .label 비밀번호
            input(name="password" id="password" placeholder="Password (4~15 characters)" type="password", required, minLength="4" maxLength="15" autocomplete="new-password")

            .label (선택) 닉네임
            input(name="name" id="name" placeholder="(Optional) Nickname (1~10 characters)" type="text" minLength="1" maxLength="10")

            .label 프로필 아바타
            .radio
                each avatar in ["defaultAvatar","sarang","seoul","crown","red","yellowgreen"]
                    +radio(avatar, "defaultAvatar", "avatarUrl")

            button(type="submit") Join
