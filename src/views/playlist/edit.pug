extends ../base

block content
    .center
        h2 플레이리스트 편집

        if errorMsg
            .errorMsg=errorMsg

        form(method="POST")


            .label 플레이리스트 이름
            input(name="name" id="name" placeholder="Playlist name" type="text" required value=playlist.name)

            .label (선택) 플레이리스트 커버 이미지 주소
            input(name="coverUrl" id="editCoverPreviewInput" placeholder="(Optional) Playlist cover image url" type="text" value=playlist.coverUrl).noMarginBottom

            button(type="button")#editCoverPreviewBtn.noMarginBottom 미리보기 (Preview)
            #editCoverPreview
                img(src=playlist.coverUrl)

            button(type="submit") 수정 (Edit)

            .label 💥 플레이리스트 삭제 💥
            button(type="button" data-id=playlist._id)#deletePlaylistBtn.noMarginTop 삭제하기




    script(src="/static/js/edit.js") 