.nav
    a(href="/")
        h1.logo Silk Music

    .user
        if loggedIn
            .user-avatar
                img(src=loggedInUser.avatarUrl)
            .user-nickname=loggedInUser.name
            .user-email=loggedInUser.email
            .user-menu
                a(href="/user/edit") 프로필 수정
                a(href="/user/logout") 로그아웃
        else
            .user-avatar
                img(src="/public/client/img/defaultAvatar.png")
            .user-nickname Guest
            .user-menu
                a(href="/login") 로그인
                a(href="/join") 회원가입

    .label MENU
    ul
        li(class=`${pathName==="/"&&"active"}`)
            a(href="/")
                i.fa.fa-home
                span 홈
        li(class=`${pathName==="/chart"&&"active"}`)
            a(href="/chart")
                i.fa.fa-chart-simple
                span 인기 차트
        li(class=`${pathName==="/search"&&"active"}`)
            a(href="/search")
                i.fa.fa-magnifying-glass
                span 검색
        li(class=`${pathName==="/upload-song"&&"active"}`)
            a(href="/upload-song")
                i.fa.fa-music
                span 노래 등록

    .label PLAYLIST
    ul
        li(class=`${pathName==="/playlist/like"&&"active"}`)
            a(href="/playlist/like")
                i.far.fa-heart
                span 좋아요 누른 곡
        li(class=`${pathName==="/playlist/my"&&"active"}`)        
            a(href="/playlist/my")                
                i.fa.fa-headphones
                span 내 플레이리스트

    .label EVENT
    ul
        li(class=`${pathName==="/rank"&&"active"}`)
            a(href="/rank")
                i.fa.fa-medal
                span 스트리밍 랭킹

    i.fa.fa-xmark#navCloseBtn

