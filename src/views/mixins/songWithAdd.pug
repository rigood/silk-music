mixin songWithAdd(song, index)
    li.song(data-id=song.song._id)
        .rank=index+1
        .cover.play-btn
            img(src=song.song.coverUrl)
            .overlay
                i.fa.fa-play
        .info
            span.title=song.song.title
            span.artist=song.song.artist
        .album=song.song.album
        .view
            i.far.fa-eye
            span=song.song.views
        .play.play-btn
            i.fa.fa-play
        .add
            i.fa.fa-plus
        .like
            if song.isLiked
                i.fa.fa-heart.isLiked
            else
                i.far.fa-heart